import requests
import time

API_URL = "http://127.0.0.1:8000/process_urls_in_batches"  # Ahora apuntando a local
DOMAIN = "https://boanorte.es/"
BATCH_SIZE = 10

start = 0
todas_las_urls = []

print(f"ğŸ” Iniciando rastreo SEO LOCAL en: {DOMAIN}\n")

while True:
    payload = {
        "domain": DOMAIN,
        "batch_size": BATCH_SIZE,
        "start": start
    }

    response = requests.post(API_URL, json=payload)

    if response.status_code != 200:
        print(f"âŒ Error en lote {start}: {response.status_code}")
        print(response.text)
        break

    data = response.json()
    urls_lote = data.get("processed_urls", [])
    todas_las_urls.extend(urls_lote)

    print(f"âœ… Lote {start} procesado. URLs extraÃ­das: {len(urls_lote)}")

    if not data.get("more_batches", False):
        break

    start = data.get("next_batch_start", start + BATCH_SIZE)
    time.sleep(1)  # pausa de cortesÃ­a

print(f"\nğŸ“¦ Total de URLs procesadas: {len(todas_las_urls)}")

# Opcional: mostrar resumen
for url in todas_las_urls:
    print(f"- {url['url']} â€” INTENT: {url['semantic_search_intent']}")
